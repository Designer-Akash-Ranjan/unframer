{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "outDir": {
            "type": "string"
        },
        "components": {
            "type": "object",
            "additionalProperties": {
                "type": "string",
                "format": "uri"
            }
        },
        "breakpoints": {
            "type": "object",
            "properties": {
                "sm": { "type": "number", "default": 320 },
                "md": { "type": "number", "default": 768 },
                "lg": { "type": "number", "default": 960 },
                "xl": { "type": "number", "default": 1200 },
                "2xl": { "type": "number", "default": 1536 }
            },
            "additionalProperties": false
        }
    },

    "required": ["outDir", "components"]
}
