{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "target": "ESNext",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["dom"],
        "moduleResolution": "Node16",
        "module": "Node16",

        "noEmit": false,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "allowJs": true,
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["**/node_modules", "**/.*/"]
}
